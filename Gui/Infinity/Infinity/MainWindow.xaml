<Window x:Class="Infinity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <GroupBox Header="General settings" HorizontalAlignment="Left" VerticalAlignment="Top" Height="128" Width="188">
            <UniformGrid Rows="3">
                <ComboBox Name="cboPorts" Height="25"/>
                <ComboBox Name="cboBaudRate" Height="25"/>
                <Button Name="btnUsePort" Content="Use port" Height="25" Click="btnUsePort_Click"/>
            </UniformGrid>            
        </GroupBox>
        <TextBox Name="txtTestContent" HorizontalAlignment="Left" Height="23" Margin="105,206,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button Name="btnTestSend" Content="Button" HorizontalAlignment="Left" Margin="252,206,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
